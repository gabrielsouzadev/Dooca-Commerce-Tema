	</head>
	<body class="page page--{{ template }} {% if customer %}customer-logged{% endif %} {% if template == 'hotsite' %} custom-{{ hotsite_id }} {% endif %}">
		<div class="wrapper" 
			style="
			background-attachment: fixed;
			background-size: {{ theme.settings.store_background_size }};
			background-position: {{ theme.settings.store_background_position }};
			background-color: {{ theme.settings.store_background_color }};
			{% if theme.settings.store_background_image %}
				background-image: url({{ theme.settings.store_background_image | img_url() }});
			{% endif %}"
		>
			{% if template != 'product' and template != 'collection' and template != 'blog' and template != 'blog-post' and template != 'hotsite' %}
				<h1 style="position: absolute; opacity: 0; z-index: -9999;">{{ page_title }}</h1>
			{% endif %}
			
			{% section 'header' %}
			
			{% if not isGooglePageSpeedInsights %}
				<main class="main-content" role="main">
					{{ content_for_layout | raw }}
				</main>

				{% section 'footer' %}
			{% endif %}
		</div>
		
		{% if not isGooglePageSpeedInsights %}
			<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js" charset="utf-8"></script>

			<script defer>
				jQuery.event.special.touchstart = {
					setup: function( _, ns, handle ){
						this.addEventListener("touchstart", handle, { passive: true });
					}
				};

				$(document).ready(function() {
					$('.owl-carousel').each(function() {
						$(this).find('.owl-dot').each(function(index) {
							$(this).attr('aria-label', index + 1);
						});
					});
				});
			</script>

			{% app 'email-capture' %}
			{% app 'disclaimer' %}

			{# default scripts #}
				{% include 'scripts/owl.twig' %}
				{# {% include 'scripts/lazyload.twig' %} #}
				{% include 'scripts/countdown.twig' %}
				
				{% if not disable_smart_search %}
					{% include 'scripts/smart-search.twig' %}
				{% endif %}

				{% include 'scripts/gallery.twig' %}
				{% include "scripts/color-variation.twig" %}
				{% include "scripts/direct.twig" %}
			{# end default #}

			{# delegate scripts #}
				{% include 'scripts/product-attributes.twig' %}
				{% include 'scripts/product-installments.twig' %}
				{% include 'scripts/app-size-guide.twig' %}
				{% include 'scripts/cart-add.twig' %}
				{% include 'scripts/request.twig' %}
				{% include 'scripts/grid-quantity.twig' %}
			{# end delegate #}

			{# dynamic scripts #}
				{% if theme.settings.product_image_hover and (theme.settings.product_buy_button_type != 'color-variation') and (theme.settings.product_buy_button_type != 'direct') %}
					{% include 'scripts/product-card.twig' %}
				{% endif %}
				{% set product_button_type = theme.settings.product_buy_button_type ?: null %}
				{% if product_button_type and product_button_type != 'simple' %}
					{% include 'scripts/product-card-buy.twig' with { 'type': product_button_type } %}

					<div class="product-buy-loader">
						<span class="loader"></span>
					</div>
				{% endif %}
				{% if customer|length > 0 %}
					{% include 'scripts/group-promotion.twig' %}
				{% endif %}
			{# end dynamic #}

			<div class="side-buy-bg"></div>
			<div class="menu-dropdown-background"></div>

			{% javascript %}
				$(function() {
					$(function(){
						$('div[onload]').trigger('onload');
					});

					var changePage = function (ele) {
						var url = $(ele).val();
						window.location = url;
					};

					$('.change-page').on('change', function () {
						changePage(this);
					});

					window.getParamns = function(element) {
						var data = element.serializeArray().reduce(function (obj, item) {
							obj[item.name] = item.value;
							return obj;
						}, {});

						return data || null;
					};

					$('.owl-carousel').each(function() {
						$(this).find('.owl-dot').each(function(index) {
							$(this).attr('aria-label', index + 1);
						});
					});
				});
			{% endjavascript %}

			{{ 'js/dc-common.js' | dc_assets_url | script_tag }}

			{% if theme.settings.modal_image and theme.settings.modal_time >= 0 %}
				{% include "modal.twig" %}
			{% endif %}

			{% if not theme.settings.lgpd_disable %}
				{% include "lgpd.twig" %}
			{% endif %}

			{% javascript %}
				$(function() {
					$('body').delegate('.personalize-product__title', 'click', function(e) {
						var icon = $(e.target);
						var content = $('.personalize-product__content');

						icon.toggleClass('opened');
						content.slideToggle();
					});
				});
			{% endjavascript %}
		{% endif %}
	</body>
</html>
