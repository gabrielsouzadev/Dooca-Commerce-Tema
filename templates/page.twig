            <div class="col-12">
                {% include 'navigation-mobile.twig' %}
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-12 col-md-8 offset-md-4">
                <div class="page-header mt-5 p-4 text-center">
                    <h1 class="page-title h1 m-0">{{ page.name }}</h1>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="d-none d-md-block col-12 col-md-4 mb-0 mb-md-5">
                {% section 'page-navigation' %}
            </div>
            <div class="col-12 col-md-8 mb-5">
                {% section 'page-article' %}
            </div>
        </div>
    </div>
</div>
