{% set bg_color = background ?: '#F8F8F8' %}
{% set color = color ?: '#808080' %}
{% set img = icon ?: null %}

{% set placeholder = [
    'img/dc-placeholders/baby-bottle.svg',
    'img/dc-placeholders/baby-carriage.svg',
    'img/dc-placeholders/bag.svg',
    'img/dc-placeholders/basket-ball.svg',
    'img/dc-placeholders/basket-case.svg',
    'img/dc-placeholders/bicycle.svg',
    'img/dc-placeholders/book.svg',
    'img/dc-placeholders/bottle.svg',
    'img/dc-placeholders/cap.svg',
    'img/dc-placeholders/chair.svg',
    'img/dc-placeholders/couch.svg',
    'img/dc-placeholders/dress.svg',
    'img/dc-placeholders/eyeglass.svg',
    'img/dc-placeholders/foam.svg',
    'img/dc-placeholders/football-ballsvg',
    'img/dc-placeholders/game.svg',
    'img/dc-placeholders/guitar.svg',
    'img/dc-placeholders/headphone.svg',
    'img/dc-placeholders/helmet.svg',
    'img/dc-placeholders/hummer.svg',
    'img/dc-placeholders/image.svg',
    'img/dc-placeholders/laptop.svg',
    'img/dc-placeholders/lipstick.svg',
    'img/dc-placeholders/liquefier.svg',
    'img/dc-placeholders/man-shoes.svg',
    'img/dc-placeholders/mirror.svg',
    'img/dc-placeholders/monitor.svg',
    'img/dc-placeholders/pan.svg',
    'img/dc-placeholders/perfume.svg',
    'img/dc-placeholders/racket.svg',
    'img/dc-placeholders/screwdriver.svg',
    'img/dc-placeholders/skate.svg',
