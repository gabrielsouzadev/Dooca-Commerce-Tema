    'img/dc-placeholders/video.svg',
    'img/dc-placeholders/washer.svg',
    'img/dc-placeholders/woman-shoes.svg',
] %}

<div class="banner placeholder img-fluid p-4 w-100 position-relative {% if flex %} d-flex align-items-center justify-content-center {% endif %}" style="background-color: {{ bg_color }}; color: {{ color }};">
    <div class="svg" style="opacity: 0.2">
        {% if icon %}
            {{ icon | svg }}
        {% else %}
            {{ random(placeholder) | svg }}
        {% endif %}
    </div>

    {% if data.title or data.text %}
            <a class="banner-link w-100 position-absolute d-flex align-items-center justify-content-center" {% if data.banner_url %} href="{{ data.banner_url }}" {% endif %}
               {% if data.banner_blank %} target="_blank" {% endif %} aria-label="{{ data.title }}">
                <div class="banner-mask" style="
                    background-color: {{ data.mask_color }};
                    {% if visible %} opacity: .6; {% endif %}
                ">
                </div>

                <div class="banner-info p-4 text-center position-relative"
                    style="{% if visible %} opacity: 1; {% endif %}
                ">

                    {% if data.title %}
                        <h3 class="h3" style="
                            color: {{ data.title_color }};
                        ">
                            {{ data.title | raw }}
                        </h3>
                    {% endif %}

                    {% if data.text %}
                        <p style="
                            color: {{ data.text_color }};
                        ">
                            {{ data.text | raw }}
                        </p>
                    {% endif %}

                    {% if data.button_text %}
                        <span class="btn mt-3" style="
                            background-color: {{ data.button_bg_color | default(theme.settings.color_primary) }};
                            color: {{ data.button_text_color | default('#FFFFFF') }};
                        ">
                            {{ data.button_text }}
                        </span>
                    {% endif %}
                </div>
            </a>
        {% endif %}
</div>