<script type="text/javascript" defer>
    $(function() {
        $('body').delegate('.dc-quantity-card, .product-buy-modal .dc-quantity', 'click', function(event) {
            var _this = $(this);
            var _event = $(event.target);
            var _input = $(this).find('.dc-input');

            var min = $(this).data('min');
            var max = $(this).data('max');
            var val = _input.val();

            min = parseInt(min);
            max = parseInt(max);
            val = parseInt(val);

            if (_event.parents().closest('button').hasClass('dc-decrease') || _event.hasClass('dc-decrease')) {
                var n_val = 0;
                n_val = val - 1;

                if (n_val >= min) {
                    _input.val(n_val);
                }
            }

            if (_event.parents().closest('button').hasClass('dc-increase') || _event.hasClass('dc-increase')) {
                var n_val = 0;
                n_val = val + 1;
                
                if (n_val <= max) {
                    _input.val(n_val);
                }
            }
        });
    });
</script>
