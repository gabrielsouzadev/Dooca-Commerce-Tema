<div class="header-middle position-relative">
    <div class="header-bg h-pr-background" style="opacity: {{ opacity_css }};"></div>
    <div class="{{ container }}">
        <div class="row justify-content-between align-items-center {% if container == 'container-fluid' %}pl-3 pr-3{% endif %}">
            <div class="col-2 pt-2 pb-2 h-sc-color">
                {% include 'header-logo.twig' with { 'max_height': logo_max_height } %}
            </div>
            <div class="col-10 h-100">
                <div class="row align-items-center justify-content-end no-gutter">
                    <div class="col position-static h-100">
                        <div class="row align-items-center">
                            <div class="col position-static h-100">
                                {% include 'navigation.twig' %}
                            </div>
                        </div>
                    </div>
                    <div class="col-auto">
                        <div class="d-flex align-items-center justify-content-end">
                            {% if show_smartsearch %}
                                <div class="ml-3">
                                    {% include 'smart-search-modal.twig' %}
                                </div>
                            {% endif %}
                            {% if not shop.catalog %}
                                <div class="ml-3">
                                    {% include 'nav-user.twig' with { 'no_text': 'true' } %}
                                </div>
                                <div class="ml-3">
                                    {% include 'nav-cart.twig' %}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
