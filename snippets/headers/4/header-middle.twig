<div class="header-middle position-relative">
    <div class="header-bg h-pr-background" style="opacity: {{ opacity_css }};"></div>
    <div class="{{ container }}">
        <div class="row justify-content-between align-items-center pt-2 pb-2 {% if container == 'container-fluid' %}pl-3 pr-3{% endif %}">
            {% set menu_main = navigation[theme.sections.header.settings.menu_main] %}
            {% if menu_main %}
                <div class="col-auto">
                    {% include 'headers/' ~ type ~ '/navigation.twig' %}
                </div>
            {% endif %}
            <div class="col h-sc-color">
                {% include 'header-logo.twig' with { 'max_height': logo_max_height } %}
            </div>
            <div class="col-auto">
                <div class="d-flex align-items-center">
                    {% if show_smartsearch %}
                        <div class="ml-3">
                            {% include 'smart-search-modal.twig' %}
                        </div>
                    {% endif %}
                    {% if not shop.catalog %}
                        <div class="ml-3">
                            {% include 'nav-user.twig' with { 'no_text': 'true' } %}
                        </div>
                        <div class="ml-3">
                            {% include 'nav-cart.twig' %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
