@font-face {
  font-family: 'DoocaCommerce-Socials';
  src:  url('{{ 'fonts/doocacommerce_socials.eot' | dc_assets_url }}');
  src:  url('{{ 'fonts/doocacommerce_socials.eot' | dc_assets_url }}') format('embedded-opentype'),
    url('{{ 'fonts/doocacommerce_socials.ttf' | dc_assets_url }}') format('truetype'),
    url('{{ 'fonts/doocacommerce_socials.woff' | dc_assets_url }}') format('woff'),
    url('{{ 'fonts/doocacommerce_socials.svg' | dc_assets_url }}') format('svg');
  font-weight: normal;
  font-style: normal;
  font-display: block;
}

.footer-social [class^="icon-"], [class*=" icon-"],
.nav-social [class^="icon-"], [class*=" icon-"] {
  /* use !important to prevent issues with browser extensions that change fonts */
  font-family: 'DoocaCommerce-Socials' !important;
  speak: never;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;
  font-size: 25px;
  /* Better Font Rendering =========== */
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

